{
  "name": "pool",
  "version": "0.1.1",
  "license": "GPL-2.0-or-later",
  "scripts": {
    "build": "export NODE_OPTIONS=--trace-warnings; parcel build resources/index.js resources/admin.js resources/images/** --dist-dir public --public-url $PREFIX_PATH/assets/",
    "watch": "export NODE_OPTIONS=--trace-warnings; parcel watch resources/index.js resources/admin.js --dist-dir public",
    "version": "yarn version-dune && yarn version-opam && yarn version-opam-lock && yarn version-pool",
    "version-dune": "sed -i \"s/^(version .*\\..*\\..*)/(version ${npm_package_version})/g\" ./dune-project && git add ./dune-project",
    "version-opam": "sed -i \"s/^version: \".*\"/version: \\\"${npm_package_version}\\\"/g\" ./pool.opam && git add ./pool.opam",
    "version-opam-lock": "sed -i \"s/^version: \".*\"/version: \\\"${npm_package_version}\\\"/g\" ./pool.opam.locked && git add ./pool.opam.locked",
    "version-pool": "sed -i \"s/^let to_string = \".*\"/let to_string = \\\"${npm_package_version}\\\"/g\" ./pool/version/version.ml && git add ./pool/version/version.ml"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.7.0",
    "parcel": "^2.0.0"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^36.0.0",
    "@econ/frontend-framework": "^1.0.8",
    "flatpickr": "^4.6.13",
    "htmx.org": "^1.6.0"
  }
}
